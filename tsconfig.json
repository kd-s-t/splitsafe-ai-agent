{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@icp": ["./src/lib/internal/icp/index.ts"],
      "@icp/*": ["./src/lib/internal/icp/*"],
      "@constellation": ["./src/lib/integrations/constellation/index.ts"],
      "@constellation/*": ["./src/lib/integrations/constellation/*"],
      "@story": ["./src/lib/integrations/story-protocol/index.ts"],
      "@story/*": ["./src/lib/integrations/story-protocol/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
